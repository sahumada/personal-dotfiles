    email = sahumada@texla.cl
    signingkey = sahumada@texla.cl
[http]
    sslverify = false
[push]
    default = tracking
[rebase]
    stat = true
[rerere]
    enabled = true
[status]
    showuntrackedfiles = all
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[mergetool]
    prompt = false
[init]
    defaultBranch = development
[commit]
    gpgsign = false
[tag]
    gpgsign = true
