[core]
    autocrlf = input
    whitespace  = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    pager = less -FRSX
    eol = lf
    sparsecheckout = true
[color]
    ui = auto
    interactive = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    br = branch
    ci = commit
    co = checkout
    cp = cherry-pick
    dc = diff --cached
    df = diff
    ign = ls-files -o -i --exclude-standard # Show files ignored by git:
    lg = log -p --pretty=fuller
    lo = log --graph --decorate
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    st = status
    who = shortlog -s -n --
